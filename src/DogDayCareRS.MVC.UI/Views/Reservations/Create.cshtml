@using System.Web.UI.WebControls
@model DogDayCareRS.MVC.DATA.EF.Reservation

@{
    ViewBag.Title = "Create";
}

<div class="home2">
    <div class="parallax-mirror2 parallax-slider2" data-parallax="scroll" data-image-src="/Content/images/Admindoggo.png" data-speed="0.8"></div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="moveToCenter intro_subtitle page_subtitle">Make a Reservation</h4>
        <p class="moveToCenter">[If a location is not visible in the drop-down, that means it is at capacity. <br/>Please send an email or call for any questions/concerns.]</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row resCreatePoosh">
            @Html.LabelFor(model => model.LocationID, "LocationID", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.DropDownList("LocationID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LocationID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row resCreatePoosh">
            
                @Html.LabelFor(model => model.ReservationDate, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ReservationDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReservationDate, "", new { @class = "text-danger" })
                </div>
            
        </div>

        <div class="form-group row resCreatePoosh">
            @Html.LabelFor(model => model.OwnerAssetID, "OwnerAssetID", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.DropDownList("OwnerAssetID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OwnerAssetID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row moveToCenter">
            <div class="col-md-offset-2 col-md-10">
                <div class="btn btn-primary backButton">@Html.ActionLink("Cancle", "Index")</div>
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
           
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>
        $(function () {
            $("#ReservationDate").datepicker();
        });
    </script>}