@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete";
}

<div class="home">
    <div class="parallax_background parallax-window" data-parallax="scroll" data-image-src="/Content/images/Admindoggo.png" data-speed="0.8"></div>
</div>

<div class="moveToCenter">
    <h3>Are you sure you want to delete this Role? </h3>
    <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
</div>
<div class="moveToCenter">
    <h4>Role.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <div class="btn btn-warning">
            @Html.ActionLink("Back to Roles", "Index")
        </div>
    </div>
    }
</div>
